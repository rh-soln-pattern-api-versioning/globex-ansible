{% for __user in  _users %}
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ apim_application_name | replace("user",__user) }}
  namespace: {{ apim_application_namespace }}
  finalizers:
  - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    name: ""
    namespace: {{ apim_namespace_prefix }}{{__user}}
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
  source:
    repoURL: {{ threescalecrds_gitops_repo }}
    targetRevision: {{ threescalecrds_gitops_repo_tag }}
    path: {{ threescalecrds_gitops_repo_path }}
    helm:
      values: |
        threescale-tenant-secret:
          threescale:
            namespace: {{ threescale_namespace }}
            rolebinding:
              name: threescale-tenant-secret-{{ __user }}
{% endfor %}